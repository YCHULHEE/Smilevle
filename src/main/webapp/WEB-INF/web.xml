<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
    
    <listener>
       <listener-class>kr.co.smilevle.jdbc.DBCPInitListener</listener-class>
    </listener>
   
   <context-param>
      <param-name>poolConfig</param-name>
      <param-value>
         jdbcDriver=oracle.jdbc.OracleDriver
         jdbcUrl=jdbc:oracle:thin:@localhost:1521:xe
         dbUser=user01
         dbPass=1234
         validationQuery=select 1
         minIdle=3
         maxTotal=30
         poolName=board
      </param-value>
   </context-param>
   
   <filter>
      <filter-name>encodingFilter</filter-name>
      <filter-class>kr.co.smilevle.util.CharacterEncodingFilter</filter-class>
      <init-param>
         <param-name>encoding</param-name>
         <param-value>utf-8</param-value>
      </init-param>      
   </filter>
   <filter-mapping>
         <filter-name>encodingFilter</filter-name>
         <url-pattern>/*</url-pattern>
   </filter-mapping>
   
   <servlet>
         <servlet-name>ControllerUsingURI</servlet-name>
         <servlet-class>kr.co.smilevle.common.controller.ControllerUsingURI</servlet-class>
         <init-param>
            <param-name>configFile</param-name>
            <param-value>/WEB-INF/commandHandlerURI.properties</param-value>
         </init-param>         
   </servlet>   
   <servlet-mapping>
         <servlet-name>ControllerUsingURI</servlet-name>
         <url-pattern>*.do</url-pattern>
   </servlet-mapping>
   
   <filter>
      <filter-name>LoginCheckFilter</filter-name>
      <filter-class>kr.co.smilevle.filter.LoginCheckFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>LoginCheckFilter</filter-name>
      <url-pattern>/changePwd.do</url-pattern>
      <url-pattern>/article/write.do</url-pattern>
      <url-pattern>/article/modify.do</url-pattern>
   </filter-mapping>
   
</web-app>